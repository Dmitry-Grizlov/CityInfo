@model NewsIndexModel

<main class="main-content">
    <div class="container">
        <div class="breadcrumb">
            @Html.ActionLink("Home", "Index", "Cities")
            <span>News</span>
        </div>
    </div>

    <div class="fullwidth-block">
        <div class="container">
            <div class="row">
                <div class="content col-md-8">
                    @foreach (var item in @Model.News.Data)
                    {
                        <div class="post">
                            <h2 class="entry-title">@item.Title</h2>
                            @* <div class="featured-image"><img src="@item.Image" alt=""></div> *@
                            <p>@item.Description</p>
                            <a href="@item.Url" target="_blank" class="button">Read more</a>
                        </div>
                    }
                </div>
                <div class="sidebar col-md-3 col-md-offset-1">
                    <div class="widget">
                        <h3 class="widget-title">Hot News</h3>
                        <ul class="arrow-list">
                            @foreach (var item in @Model.HotNews.Data)
                            {
                                <li><a href="@item.Url">@item.Title</a></li>
                            }
                        </ul>
                    </div>

                    <div class="widget">
                        <h3 class="widget-title">Categories</h3>
                        <ul class="arrow-list">
                            @foreach (var item in @Model.Categories)
                            {
                                <li>@Html.ActionLink(item, "Index", "News", new{ category = item, city = ViewData["Title"]})
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>